<?xml version="1.0" encoding="utf-8" ?>
<page layout="shell" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="columns">
            <!-- Add a placeholder block to force the container to print its <div> wrapper -->
            <block name="pwa.placeholder" class="Magento\Framework\View\Element\Text">
                <arguments>
                    <argument name="text" xsi:type="string"><![CDATA[<!-- Main content -->]]></argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
